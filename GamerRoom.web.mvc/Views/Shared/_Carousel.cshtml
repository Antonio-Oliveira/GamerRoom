@model List<GameViewModel>

<div class="carrossel-jogos">

    <div class="owl-carousel owl-theme">

        @foreach (var game in Model)
        {
            <div class="item">
                <img class="custom-img" src="@game.ImageUri">

                <ul class="card">

                    <li class="title" id="title">
                        <h5>@game.Name</h5>
                    </li>

                    <li class="nota"> <img src="~/media/icons/star.svg" id="estrela" alt="star"> &nbsp; @game.Rating </li>
                    <li class="like"> <img src="~/media/icons/plus.svg" id="estrela" alt="like"> &nbsp; @game.Genre</li>
                    <li class="trailer">
                        <a href="@game.TrailerUri" target="_blank">
                            <img src="~/media/icons/play.svg" id="estrela" alt="play">
                        </a> &nbsp; Play trailer
                    </li>
                </ul>
            </div>
        }

    </div>

